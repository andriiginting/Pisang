<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:attribute="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andriginting.pisang.Login">

    <com.github.florent37.arclayout.ArcLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:arc_cropDirection="cropOutside"
        app:arc_height="50dp"
        android:elevation="3dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/bg_biru_muda"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/banana"
            android:layout_gravity="center"/>
    </com.github.florent37.arclayout.ArcLayout>

    <EditText
        android:id="@+id/input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="12dp"
        android:drawablePadding="20dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:hint="Username"
        android:drawableLeft="@drawable/user"
        android:background="@drawable/edittext_username"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingLeft="25dp"
        android:paddingRight="12dp"
        android:drawablePadding="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="12dp"
        android:hint="Password"
        android:drawableLeft="@drawable/key"

        android:inputType="textPassword"
        android:background="@drawable/edittext_username"/>
    <TextView
        android:id="@+id/text_lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Password ?"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        />

    <Button
        android:id="@+id/btn_login_inUser"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="LOGIN"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_register_biru"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:elevation="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <TextView
            android:id="@+id/reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Don't Have an Account?"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/daftar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" REGISTER"
            android:textSize="16sp"
            android:textColor="@color/bg_biru_muda"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/reg"/>
    </RelativeLayout>

</LinearLayout>
